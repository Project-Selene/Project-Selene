{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": [ "ES2018", "DOM" ],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "skipLibCheck": true // Chokidar has a bug. Remove this when it works again. https://github.com/paulmillr/chokidar/issues/1299
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
