{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install dummy game dependencies",
            "type": "shell",
            "command": "npm ci",
            "options": {
                "cwd": "${workspaceFolder}/../ProjectSelene.DummyGame"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Install ui dependencies",
            "type": "shell",
            "command": "npm ci",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build dummy game",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/../ProjectSelene.DummyGame"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start dev server",
            "type": "shell",
            "command": "npm run serve",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start dummy game debugging",
            "type": "process",
            "command": "${workspaceFolder}/../ProjectSelene.DummyGame/dist/nw",
            "windows": {
                "command": "${workspaceFolder}/../ProjectSelene.DummyGame/dist/nw.exe",
            },
            "options": {
                "cwd": "${workspaceFolder}/../ProjectSelene.DummyGame/dist/"
            },
            "args": [
                "--remote-debugging-port=9222",
                "--user-data-dir=remote-debug-profile"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}